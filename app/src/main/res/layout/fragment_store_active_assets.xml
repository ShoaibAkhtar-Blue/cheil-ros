<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.storeview.StoreActiveAssetsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#ededed"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update: " />

        <ImageButton
            android:id="@+id/btnAddAsset"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:backgroundTint="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/add" />


    </LinearLayout>

    <com.example.cheilros.activities.customobj.EmptyRecyclerView
        android:id="@+id/rvAssetsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

    </com.example.cheilros.activities.customobj.EmptyRecyclerView>
    <!-- Added an empty view which will be shown when the EmptyRecyclerView
             is empty -->
    <LinearLayout
        android:id="@+id/todo_list_empty_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:src="@drawable/no_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/samsungsharpsans_bold"
            android:padding="16dp"
            android:text="NO RECORD FOUND"
            android:textColor="#534f47"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>